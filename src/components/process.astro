---
import Section from "./ui/section.astro";
import type { HomeContent } from "../content/home";

interface Props {
    content: HomeContent["process"];
}

const { content } = Astro.props;
const steps = content.steps;
---

<Section class="relative">
    <div class="text-center">
        <span
            class="text-xs font-bold text-primary uppercase tracking-widest mb-4 block animate-fade-in"
            >{content.label}</span
        >
        <h2
            class="font-serif text-3xl md:text-5xl font-bold mb-16 animate-fade-in"
        >
            {content.title}
        </h2>

        <div class="relative grid md:grid-cols-4 gap-8">
            <div
                class="hidden md:block absolute top-14 left-0 w-full h-0.5 bg-linear-to-r from-transparent via-border to-transparent -z-10"
            >
            </div>

            {
                steps.map((step) => (
                    <div class="relative group bg-bg p-4 md:bg-transparent">
                        <div class="w-20 h-20 mx-auto bg-bg-card border-2 border-border rounded-full flex items-center justify-center font-serif text-2xl font-bold text-primary group-hover:border-primary group-hover:scale-110 transition-all duration-300 shadow-xl shadow-black/20 z-10 relative mb-6">
                            {step.number}
                        </div>
                        <h3 class="font-bold text-xl mb-3">{step.title}</h3>
                        <p class="text-text-muted text-sm leading-relaxed">
                            {step.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</Section>
