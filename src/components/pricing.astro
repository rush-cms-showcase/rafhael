---
import Section from './ui/section.astro'
import Button from './ui/button.astro'
import type { HomeContent } from '../content/home';

interface Props {
    content: HomeContent["pricing"];
}

const { content } = Astro.props;
---

<Section id="pricing">
    <div class="text-center max-w-3xl mx-auto mb-12 animate-fade-in">
        <span class="text-xs font-bold text-primary uppercase tracking-widest mb-4 block">{content.label}</span>
        <h2 class="font-serif text-4xl md:text-5xl font-bold mb-6">{content.title}</h2>
        <p class="text-text-muted text-lg">{content.subtitle}</p>
    </div>

    <div class="max-w-4xl mx-auto bg-bg-elevated border border-primary/20 rounded-3xl p-8 md:p-12 shadow-2xl shadow-primary/5 relative overflow-hidden">
        <!-- Optional: Background glow or effect -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

        <div class="flex flex-col md:flex-row justify-between items-center gap-8 mb-12 border-b border-border/50 pb-12 relative z-10">
            <div class="text-center md:text-left">
                <div class="text-sm text-text-muted uppercase tracking-widest mb-2">{content.startingAt}</div>
                <div class="font-serif text-5xl md:text-6xl font-bold text-text-main mb-2">
                    <span class="text-lg mr-1 align-top relative top-2">{content.currency}</span>{content.price}
                </div>
                <div class="text-text-muted text-lg">
                    + {content.currency} {content.monthly} <span class="text-sm opacity-80">{content.monthlyLabel}</span>
                </div>
            </div>
            
            <div class="w-full md:w-auto">
                <Button
                    href="https://wa.me/5512983173077"
                    variant="primary"
                    size="lg"
                    className="w-full md:min-w-[250px] shadow-lg shadow-primary/20"
                >
                    {content.cta}
                </Button>
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-12 relative z-10">
            <!-- Core Features -->
            <div>
                 <h3 class="font-serif text-xl font-bold mb-6 text-text-main flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                    {content.featuresCoreLabel}
                </h3>
                <ul class="space-y-4">
                    {content.featuresCore.map(feature => (
                        <li class="flex items-start gap-3 text-text-subtle">
                            <svg class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Advanced Features -->
            <div>
                <h3 class="font-serif text-xl font-bold mb-6 text-text-main flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><line x1="12" y1="20" x2="12" y2="10"/><line x1="18" y1="20" x2="18" y2="4"/><line x1="6" y1="20" x2="6" y2="16"/></svg>
                    {content.featuresAdvancedLabel}
                </h3>
                <ul class="space-y-4">
                    {content.featuresAdvanced.map(feature => (
                        <li class="flex items-start gap-3 text-text-subtle">
                             <svg class="w-5 h-5 text-primary shrink-0 mt-0.5 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</Section>
