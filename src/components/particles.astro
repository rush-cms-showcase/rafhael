<canvas
    id="hero-particles"
    class="absolute inset-0 w-full h-full pointer-events-none opacity-40"
></canvas>

<script is:inline>
    class ParticleSystem {
        constructor() {
            this.canvas = document.getElementById('hero-particles')
            if (!this.canvas) return

            this.ctx = this.canvas.getContext('2d')
            this.particles = []
            this.width = 0
            this.height = 0
            
            this.resizeObserver = new ResizeObserver((entries) => {
                 for (const entry of entries) {
                    if (entry.target === this.canvas) {
                        this.width = entry.contentRect.width
                        this.height = entry.contentRect.height
                        this.canvas.width = this.width
                        this.canvas.height = this.height
                        this.init()
                    }
                 }
            })
            
            this.resizeObserver.observe(this.canvas)
            // Initial size set
            this.width = window.innerWidth
            this.height = window.innerHeight
            this.canvas.width = this.width
            this.canvas.height = this.height
            
            this.init()
            this.animate()
        }

        init() {
            this.particles = []
            const particleCount = Math.min(this.width / 10, 100)

            for (let i = 0; i < particleCount; i++) {
                this.particles.push({
                    x: Math.random() * this.width,
                    y: Math.random() * this.height,
                    vx: (Math.random() - 0.5) * 0.5,
                    vy: (Math.random() - 0.5) * 0.5,
                    size: Math.random() * 2 + 1,
                    alpha: Math.random() * 0.5 + 0.1
                })
            }
        }

        draw() {
            this.ctx.clearRect(0, 0, this.width, this.height)

            this.ctx.strokeStyle = 'rgba(63, 145, 240, 0.1)'
            this.ctx.lineWidth = 1

            for (let i = 0; i < this.particles.length; i++) {
                const p = this.particles[i]

                p.x += p.vx
                p.y += p.vy

                if (p.x < 0 || p.x > this.width) p.vx *= -1
                if (p.y < 0 || p.y > this.height) p.vy *= -1

                this.ctx.beginPath()
                this.ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2)
                this.ctx.fillStyle = `rgba(255, 255, 255, ${p.alpha})`
                this.ctx.fill()

                for (let j = i + 1; j < this.particles.length; j++) {
                    const p2 = this.particles[j]
                    const dx = p.x - p2.x
                    const dy = p.y - p2.y
                    const distance = dx * dx + dy * dy // Optimization: Avoid sqrt until necessary

                    if (distance < 22500) { // 150 * 150 = 22500
                        this.ctx.beginPath()
                        this.ctx.moveTo(p.x, p.y)
                        this.ctx.lineTo(p2.x, p2.y)
                        this.ctx.stroke()
                    }
                }
            }
        }

        animate() {
            this.draw()
            requestAnimationFrame(() => this.animate())
        }
    }

    document.addEventListener('astro:page-load', () => new ParticleSystem())
    document.addEventListener('DOMContentLoaded', () => new ParticleSystem())
</script>
