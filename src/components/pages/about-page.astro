---
import Layout from "../../layouts/layout.astro";
import Header from "../header.astro";
import Footer from "../footer.astro";
import Section from "../ui/section.astro";
import Container from "../ui/container.astro";
import type { HomeContent } from "../../content/home";

interface Props {
    content: HomeContent;
    locale?: "en" | "pt_BR";
}

const { content, locale = "en" } = Astro.props;
const aboutContent = content.aboutMe;
---

<Layout title={`${aboutContent.title} | Rafhael Marsigli`} description={aboutContent.hero.subtitle}>
    <Header content={content.global.nav} locale={locale} />
    
    <main class="pt-24 pb-16 overflow-x-hidden">
        <Section class="relative">
            <Container>
                <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[60vh]">
                    <div class="relative z-10">
                        <span class="text-primary font-bold tracking-widest uppercase mb-4 block" set:html={aboutContent.hero.brow} />
                        <h1 class="font-serif text-5xl lg:text-7xl font-bold mb-8 leading-tight" set:html={aboutContent.hero.title} />
                        <p class="text-xl text-text-muted leading-relaxed max-w-lg" set:html={aboutContent.hero.subtitle} />
                    </div>
                    
                    <div class="relative">
                        <div class="absolute top-40 -right-20 w-96 h-96 bg-primary/20 blur-[100px] rounded-full pointer-events-none"></div>
                        <div class="relative z-10 flex justify-center">
                            <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-white/10 aspect-[4/5] max-w-md mx-auto">
                                <img 
                                    src="/rafhael-profile-picture.webp" 
                                    alt="Rafhael Marsigli" 
                                    class="w-full h-full object-cover"
                                />
                                <div class="absolute bottom-6 left-6 right-6">
                                    <p class="font-serif text-2xl font-bold text-white">Rafhael Marsigli</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </Container>
        </Section>


        <Section class="bg-bg-elevated/50 py-16">
            <Container>
                <div class="max-w-4xl mx-auto">
                    <div class="prose prose-lg prose-invert prose-headings:font-serif prose-headings:font-bold max-w-none">
                        <p class="lead text-2xl mb-12 font-light border-l-4 border-primary pl-6 italic" set:html={aboutContent.quote} />
                        
                        <h2 class="text-4xl mb-8" set:html={aboutContent.journey.title} />
                        <h3 class="text-xl text-primary font-bold mb-4 uppercase tracking-wider" set:html={aboutContent.journey.subtitle} />
                        <div class="relative mb-16">
                            <p class="mb-6 relative z-10 bg-bg-elevated/80 backdrop-blur-sm p-4 rounded-xl" set:html={aboutContent.journey.text1} />
                            <p class="mb-6" set:html={aboutContent.journey.text2} />
                        </div>
                    </div>
                </div>
                


                <div class="max-w-4xl mx-auto">
                    <div class="prose prose-lg prose-invert prose-headings:font-serif prose-headings:font-bold max-w-none">
                        <div class="relative mb-16">
                            <h2 class="text-4xl mb-8 clear-both pt-12" set:html={aboutContent.philosophy.title} />
                            <h3 class="text-xl text-primary font-bold mb-4 uppercase tracking-wider" set:html={aboutContent.philosophy.subtitle} />
                            
                            <p class="mb-6" set:html={aboutContent.philosophy.text1} />
                            <p class="mb-6" set:html={aboutContent.philosophy.text2} />
                            <p set:html={aboutContent.philosophy.text3} />
                        </div>
                    </div>
                </div>
            </Container>
        </Section>

        <Section class="py-16">
            <Container className="max-w-3xl">
                <div class="bg-bg-card border border-border rounded-3xl p-8 lg:p-12 text-center relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 rounded-full blur-[80px] -mr-32 -mt-32 pointer-events-none"></div>
                    
                    <h2 class="font-serif text-3xl font-bold mb-6" set:html={aboutContent.connect.title} />
                    
                    <p class="text-text-muted mb-8 italic" set:html={aboutContent.connect.text} />
                    
                    <div class="flex flex-wrap items-center justify-center gap-4">
                        <a 
                            href="https://www.linkedin.com/in/rafhael/" 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="flex items-center gap-3 px-6 py-3 bg-[#0077b5] text-white rounded-lg hover:bg-[#006396] transition-all hover:-translate-y-1 shadow-lg shadow-[#0077b5]/20 font-medium"
                        >
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                            LinkedIn
                        </a>
                        
                        <a 
                            href="https://wa.me/5512983173077" 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="flex items-center gap-3 px-6 py-3 bg-[#25D366] text-white rounded-lg hover:bg-[#128C7E] transition-all hover:-translate-y-1 shadow-lg shadow-[#25D366]/20 font-medium"
                        >
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.968-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.506-.669-.516-.173-.009-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                            WhatsApp
                        </a>
                        
                        <a 
                            href="https://t.me/rmarsigli" 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="flex items-center gap-3 px-6 py-3 bg-[#0088cc] text-white rounded-lg hover:bg-[#007dbd] transition-all hover:-translate-y-1 shadow-lg shadow-[#0088cc]/20 font-medium"
                        >
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12.017 12.017 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.3.02.472-.179 1.9-1.004 5.755-1.38 7.95-.082.496-.29.627-.58.647-.648.04-1.155-.443-1.782-.871-.703-.497-1.125-.799-1.815-1.256-.814-.537-.286-.831.18-1.31.118-.124 2.186-2.003 2.226-2.176.005-.02.009-.099-.036-.14-.047-.043-.116-.027-.168-.016-.07.014-1.21.78-3.414 2.261-.318.212-.614.32-.888.314-.496-.01-1.458-.291-2.174-.515-.873-.274-1.57-.42-1.498-1.054.041-.365.518-.748 1.436-1.114 5.626-2.529 9.378-4.226 11.258-5.091 5.37-2.47 6.46-2.915 7.182-2.919l.794.004z"/></svg>
                            Telegram
                        </a>
                    </div>
                </div>
            </Container>
        </Section>
    </main>

    <Footer content={content.global.footer} />
</Layout>
