---
import Layout from '../../layouts/layout.astro'
import Header from '../../components/header.astro'
import Footer from '../../components/footer.astro'
import Section from '../../components/ui/section.astro'
import Container from '../../components/ui/container.astro'
import { homeContent } from "../../content/home";

// Use PT_BR content
const content = homeContent.pt_BR;
---

<Layout title="Cases | Rafhael Marsigli" description="Explore my recent work and case studies.">
	<Header content={content.global.nav} locale="pt_BR" />
	<main class='md:pt-8'>
		<Section>
			<Container className='text-center min-h-[60vh] flex flex-col items-center justify-center'>
				<div class='max-w-2xl mx-auto'>
					<h1 class='font-serif text-5xl lg:text-7xl font-bold mb-6 text-primary'>
						Em breve
					</h1>
					<p class='text-xl text-text-muted mb-8'>
						Estou preparando cases e projetos incr√≠veis para mostrar aqui. Volte em breve!
					</p>
					<a
						href='/'
						class='inline-flex items-center gap-2 text-primary hover:underline'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='w-5 h-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
							stroke-width='2'
						>
							<path d='M19 12H5'></path>
							<path d='M12 19l-7-7 7-7'></path>
						</svg>
						Voltar para home
					</a>
				</div>
			</Container>
		</Section>
	</main>
	<Footer content={content.global.footer} />
</Layout>
