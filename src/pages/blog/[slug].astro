---
import Layout from "../../layouts/layout.astro";
import Header from "../../components/header.astro";
import Footer from "../../components/footer.astro";
import Section from "../../components/ui/section.astro";
import Container from "../../components/ui/container.astro";
import { tiptapToHtml } from "../../lib/blocks/tiptap-to-html";
import { marked } from "marked";

import { rush, type BlogPost } from "../../lib/rush";
import { homeContent } from "../../content/home";
import { formatDate } from "../../lib/date-utils";
import { calculateReadingTime } from "../../lib/post-utils";

// Use English content
const content = homeContent.en;

export async function getStaticPaths() {
    try {
        const response = await rush.getEntries("blog", {
            per_page: 100,
            locale: 'en'
        });
        const posts = (response as any).data as BlogPost[];

        return posts.map((post) => ({
            params: { slug: post.slug },
            props: { post },
        }));
    } catch (error) {
        console.error("Error fetching paths for blog:", error);
        return [];
    }
}

const { post } = Astro.props as { post: BlogPost };

const title = `${post.title} | Rafhael Marsigli`;
const description = post.excerpt || `Leia sobre ${post.title} no blog.`;
const image = post.featured_image?.url || "/banner.webp";

let htmlContent = post.content || '';

if (post.data?.markdown) {
    try {
        htmlContent = marked.parse(post.data.markdown) as string;
    } catch (e) {
        console.error("Error rendering Markdown content:", e);
    }
} else if (post.data?.content) {
    try {
        const doc = Array.isArray(post.data.content) 
            ? { content: post.data.content } 
            : post.data.content;
        
        const rendered = tiptapToHtml(doc as any);
        if (rendered) {
            htmlContent = rendered;
        }
    } catch (e) {
        console.error("Error rendering TipTap content:", e);
    }
}
